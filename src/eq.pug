html#body(lang='en')
  head
    meta(user.name='viewport' content='width=device-width, initial-scale=1.0')
    meta(charset='utf-8')
    link(rel='icon' type='image/png' href='../static/EQF.png')
    each style in styles
      link(rel='stylesheet' href=style)
    each script in scripts
      script(src=script)
    title EPIQUEST | By Saul And DH
  body
    h1#mainh EPIQUEST
    .bar
      .sound.off
      .mode
      #stats
        .name.icon
        span#name
        .money.icon
        span#money
        .safe.icon
        span#safe
        .rod.icon
        span#rod
        .level.icon
        span#level
        .xp.icon
        span#xp
        .armor.icon
        span#armor
        .weapon.icon
        span#weapon
    #controls
      h2#display Display
      
      input#inputBox(type='text' placeholder='type here...')
      button#submit Stats
      button(class='button-theme btn' id='startGameBtn') Start Game
    a.github-corner(href='https://github.com/JohnCdf/TheEpiquestRep/' target='_blank')
      svg(
        width='80'
        height='80'
        viewBox='0 0 250 250'
        style='fill: #151513; color: #c19d64; position: absolute; top: 0; border: 0; right: 0;'
        aria-hidden='true'
      )
        path(d=pathes[0])
        path.octo-arm(d=pathes[1] fill='currentColor' style='transform-origin: 130px 106px;')
        path.octo-body(d=pathes[2] fill='currentColor')
